{% extends 'layout.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="main container">
        <div class="row well">
            <div class="col-md-6">
                <div class="page-header">
                    <h2>Nuevo Usuario</h2>
                </div>
                {{ form_start(form, {'attr' : {'role' : 'form'} }) }}
                    <div class="form-group">
                        {{ form_label(form.username, 'Usuario')}}
                        {{ form_widget(form.username, { 'attr' :{'class' : 'form-control',
                        'placeholder' :'Tu nombre usuario' } } )}}
                        <span class="text-danger">{{ form_errors(form.username) }}</span>
                    </div>			
                    <div class="form-group">
                        {{ form_label(form.firstName, 'Nombres') }}
                        {{ form_widget(form.firstName, { 'attr' :{'class': 'form-control',
                        'placeholder' : 'Nombres' } } ) }}
                        <span class="text-danger">{{ form_errors(form.firstName) }}</span>
                    </div>			
                    <div class="form-group">
                        {{ form_label(form.lastName, 'Apellidos') }}
                        {{ form_widget(form.lastName, {'attr': {'class': 'form-control', 
                        'placeholder' : 'Apellidos'}}) }}
                        <span class="text-danger">{{ form_errors(form.lastName) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.email, 'Correo Electronico') }}
                        {{ form_widget(form.email, {'attr': {'class': 'form-control', 
                        'placeholder' : 'Tu Correo Electronico'}}) }}
                        <span class="text-danger">{{ form_errors(form.email) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.password) }}
                        {{ form_widget(form.password, {'attr': {'class': 'form-control', 
                        'placeholder' : 'Tu password'}}) }}
                        <span class="text-danger">{{ form_errors(form.password) }}</span>
                    </div>
                    <div class="form-group">
                        {{ form_label(form.role, 'Perfil Usuario') }}
                        {{ form_widget(form.role, {'attr': {'class': 'form-control'}}) }}
                        <span class="text-danger">{{ form_errors(form.role) }}</span>
                    </div>
                    <div class="checkbox">
                        <label>
                            {{ form_widget(form.isActive) }}Activo
                            <span class="text-danger">{{ form_errors(form.isActive) }}</span>
                        </label>
                    </div>
                    </fieldset>
                    <p>
                        {{ form_widget(form.save, {'label' : 'Crear Usuario', 'attr': {'class': 'btn btn-success'}}) }}
                    </p>					
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}